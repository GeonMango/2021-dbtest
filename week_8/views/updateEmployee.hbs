<h1>{{title}}</h1>

<table>
    <tr>
        <td>Fname</td>
        <td>Minit</td>
        <td>Lname</td>
        <td>Ssn</td>
        <td>Bdate</td>
        <td>Address</td>
        <td>Sex</td>
        <td>Salary</td>
        <td>Super_ssn</td>
        <td>Dno</td>
    </tr>
    {{#each emp_res}}
    <form method="post" action='/update/employee'>
        <tr>
        <td>{{Fname}}</td>
        <td>{{Minit}}</td>
        <td>{{Lname}}</td>
        <td>{{Ssn}}</td>
        <td>{{Bdate}}</td>
        <td>{{Address}}</td>
        <td>{{Sex}}</td>
        <!-- input tag를 사용하여 입력 가능한 형태로 변경 -->
        <td><input type="text" name="salary" placeholder={{Salary}}></td>
        <td>{{Super_ssn}}</td>
        <td>{{Dno}}</td>
        <!-- formaction 속성을 활용하여 입력한 값을 넘겨줌. -->
        <td><input type="submit" value="수정" formaction="/update/employee"></td>
    </tr>
    </form>
    {{/each}}
</table>